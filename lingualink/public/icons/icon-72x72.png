<svg width="200" height="200" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="logoGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#3b82f6;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#6366f1;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#8b5cf6;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="accentGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#10b981;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#06d6a0;stop-opacity:1" />
    </linearGradient>
    <filter id="glow">
      <feGaussianBlur stdDeviation="3" result="coloredBlur"/>
      <feMerge> 
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>
  
  <!-- Background Circle -->
  <circle cx="100" cy="100" r="95" fill="url(#logoGradient)" opacity="0.1"/>
  
  <!-- Main Globe/World Icon -->
  <circle cx="100" cy="100" r="60" fill="none" stroke="url(#logoGradient)" stroke-width="4"/>
  
  <!-- Latitude Lines -->
  <ellipse cx="100" cy="100" rx="60" ry="30" fill="none" stroke="url(#logoGradient)" stroke-width="2" opacity="0.6"/>
  <ellipse cx="100" cy="100" rx="60" ry="15" fill="none" stroke="url(#logoGradient)" stroke-width="2" opacity="0.4"/>
  
  <!-- Longitude Lines -->
  <ellipse cx="100" cy="100" rx="30" ry="60" fill="none" stroke="url(#logoGradient)" stroke-width="2" opacity="0.6"/>
  <ellipse cx="100" cy="100" rx="15" ry="60" fill="none" stroke="url(#logoGradient)" stroke-width="2" opacity="0.4"/>
  
  <!-- Central Vertical Line -->
  <line x1="100" y1="40" x2="100" y2="160" stroke="url(#logoGradient)" stroke-width="3"/>
  
  <!-- Communication Waves/Links -->
  <path d="M 70 80 Q 100 60 130 80" fill="none" stroke="url(#accentGradient)" stroke-width="3" opacity="0.8" filter="url(#glow)"/>
  <path d="M 70 100 Q 100 80 130 100" fill="none" stroke="url(#accentGradient)" stroke-width="3" opacity="0.6"/>
  <path d="M 70 120 Q 100 140 130 120" fill="none" stroke="url(#accentGradient)" stroke-width="3" opacity="0.8" filter="url(#glow)"/>
  
  <!-- Language Symbols -->
  <g transform="translate(75, 75)">
    <text x="0" y="0" font-family="Arial, sans-serif" font-size="12" font-weight="bold" fill="url(#logoGradient)">A</text>
  </g>
  <g transform="translate(115, 75)">
    <text x="0" y="0" font-family="Arial, sans-serif" font-size="12" font-weight="bold" fill="url(#logoGradient)">中</text>
  </g>
  <g transform="translate(75, 125)">
    <text x="0" y="0" font-family="Arial, sans-serif" font-size="12" font-weight="bold" fill="url(#logoGradient)">ع</text>
  </g>
  <g transform="translate(115, 125)">
    <text x="0" y="0" font-family="Arial, sans-serif" font-size="12" font-weight="bold" fill="url(#logoGradient)">Ñ</text>
  </g>
  
  <!-- Connection Dots -->
  <circle cx="85" cy="85" r="3" fill="url(#accentGradient)" opacity="0.8"/>
  <circle cx="115" cy="85" r="3" fill="url(#accentGradient)" opacity="0.8"/>
  <circle cx="85" cy="115" r="3" fill="url(#accentGradient)" opacity="0.8"/>
  <circle cx="115" cy="115" r="3" fill="url(#accentGradient)" opacity="0.8"/>
  
  <!-- Outer Ring -->
  <circle cx="100" cy="100" r="85" fill="none" stroke="url(#logoGradient)" stroke-width="2" opacity="0.3"/>
</svg>
