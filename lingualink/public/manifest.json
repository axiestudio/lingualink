{
  "name": "Lingua Link - Real-time Translation Messaging",
  "short_name": "Lingua Link",
  "description": "Instant messaging with real-time translation powered by AI",
  "start_url": "/dashboard",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#3b82f6",
  "orientation": "portrait-primary",
  "scope": "/",
  "icons": [
