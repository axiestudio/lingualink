# ðŸš€ LinguaLink AI Backend - Production Configuration
# This file contains production-specific settings
# DO NOT commit sensitive values - use environment variables or secrets management

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# CORS Configuration - Production domains
ALLOWED_ORIGINS=["https://lingualink.tech", "https://www.lingualink.tech", "https://api.lingualink.tech"]

# Model Configuration - Production optimized
MODEL_NAME=facebook/nllb-200-distilled-600M
MODEL_CACHE_DIR=/app/models
DEVICE=auto
MAX_LENGTH=512

# Performance Configuration - Production optimized
BATCH_SIZE=2
NUM_WORKERS=1
ENABLE_CACHING=true
CACHE_TTL=7200
CACHE_MAX_SIZE=2000

# Memory Management - Production optimized
TORCH_COMPILE=true
LOW_MEMORY_MODE=false

# API Configuration - Production limits
MAX_TEXT_LENGTH=5000
RATE_LIMIT_PER_MINUTE=60

# Logging Configuration - Production logging
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Security Configuration
ENABLE_RATE_LIMITING=true
ENABLE_API_KEY_AUTH=false
API_KEY_HEADER=X-API-Key

# Database Configuration (use environment variables)
# DATABASE_URL will be provided via environment variables

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_HEALTH_CHECKS=true

# SSL Configuration (optional)
# SSL_KEYFILE=/path/to/private.key
# SSL_CERTFILE=/path/to/certificate.crt
